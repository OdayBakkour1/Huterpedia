{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ESNext"],
      "module": "CommonJS",
      "skipLibCheck": true,
  
      /* Bundler mode */
      "moduleResolution": "node",
      "moduleDetection": "force",
      
      /* Linting */
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["vite.config.ts", "api/**/*.ts", "api/**/*.cts"]
  }
  